<h3>Trainer</h3>
<p>Name: <%= @trainer.name if @trainer.name %></p>
<p>Email: <%= @trainer.email if @trainer.email %></p>
<h4>Pokemons:</h4>
	<ul>
    	<% @trainer.pokemons.each do |pokemon| %>
        	<li><%= pokemon.name %>: <%= pokemon.level %> <%= pokemon.health %> <%= button_to "Damage", damage_path(id: pokemon.id), :class => "button medium", :method => :patch %></li>
        <% end %>
 	</ul>
 	
<%= button_to "Show Form", 'pokemons#new', :class => "button medium", :method => :get %>